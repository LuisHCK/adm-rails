<%= simple_form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :picture, as: :file %>
  <div class="row">
    <div class="col-md-3 col-sm-6"><%= f.input :purchase_price %></div>
    <div class="col-md-3 col-sm-6"><%= f.input :sale_price %></div>
    <div class="col-md-3 col-sm-6"><%= f.association :provider %></div>
    <div class="col-md-3 col-sm-6"><%= f.association :category %></div>    
  </div>
  
  <div class="actions">
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>
