<div class="panel panel-info bootcards-file">
  <div class="panel-heading">
    <h3 class="panel-title">Product Information</h3>
  </div>
  <div class="list-group">

    <div class="list-group-item" style="height: 130px; padding-left: 0px !important;">
      <%= image_tag(@product.picture, class:"product-img pull-left") %>

      <h3 class="list-group-item-text">
          <%= @product.name %>
      </h3>
      <div class="list-group-item-text">
          <b>Description: </b><%= @product.description %></li>
      </div>

    </div>
    <div class="list-group-item">
      <p class="list-group-item-text"><strong>General details</strong></p>
    </div>
    <div class="list-group-item">
      <p class="list-group-item-text">
          <ul>
            <li>
            <b>Purchase Price: </b><%= @product.purchase_price %>
          </li>
          <li>
            <b>Sale Price: </b><%= @product.sale_price %>            
          </li>
          <li>
            <b>Tax: %</b><%= @product.tax %>
          </li>
          <li>
            <b>Provider: </b><%= @product.provider.name %>
          </li>
        </ul>
      </p>
    </div>
  </div>
  <div class="panel-footer">
    <div class="btn-group btn-group-justified">
      <div class="btn-group">
        <button class="btn btn-default">
          <i class="fa fa-arrow-down"></i>
          Sell
        </button>
      </div>
      <div class="btn-group">
        <button class="btn btn-default">
          <i class="fa fa-star"></i>
          Favorite
        </button>
      </div>
      <div class="btn-group">
        <button class="btn btn-default">
          <i class="fa fa-pencil"></i>
          Edit
        </button>
      </div>
    </div>
  </div>
</div>
<style>
  .product-img{
    width: auto;
    height: 120px;
  }

</style>